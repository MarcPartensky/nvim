FROM linuxbrew/linuxbrew

LABEL maintainer="Marc Partensky <marc.partensky@gmail.com"

RUN brew install --head neovim
RUN brew cleanup

RUN pip3 install neovim

COPY . .config/nvim
WORKDIR .config/nvim

RUN nvim --headless \
	+"source vim-plug/plugins.vim" \
	+PlugInstall \
	q+UpdateRemotePlugins \
	+qall
