{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
						"rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },

    "python.pythonPath": "~/.pyenv/shims/python",
    "python.venvPath": "~/venv/",

    "test.python.jediPath": "~/venv/jedi/lib/python3.9/site-packages/",
    "python.jediEnabled": true,
    "suggest.timeout": 5000,

    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.pylintPath": "pylint",

	 "python.formatting.provider": "black",
   "test.python.formatting.blackPath": "~/venv/black/lib/python3.9/site-packages/black",
   "coc.preferences.formatOnSaveFiletypes": ["python"],

		"omnisharp.version": "lastest",
    "omnisharp.trace.server": "information",
    "omnisharp.debug.server": true,

		"explorer.width": 30,
		"explorer.activeMode": true,
		"explorer.previewAction.onHover": false,
		"explorer.file.autoReveal": false,
		"explorer.file.showHiddenFiles": true,
		"explorer.icon.enableVimDevicons": true,
		"explorer.icon.enableNerdfont": true,
		"explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
		"explorer.keyMappings": {
			"<C-l>": ["expandable?", "expand", "open"],
			"v": "open.vsplit"
		}
}
